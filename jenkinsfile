pipeline {
  agent any
  environment {
    PATH = "${PATH}:${getTerraformPath()}"
  }
 
  stages {
    stage('create-s3-bucket') {
      steps {
        script {
          createS3bucket('jenkins-ansible-terraform-git-instigration-27')
        }
      }
    }
    stage('terraform init & apply -dev') {
      steps {
        script {
          sh 'terraform workspace new dev'
          sh 'terraform init'
          sh 'terraform apply --auto-approve'
        }
      }
    }
     stage('terraform init & apply -prod') {
      steps {
        script {
          sh 'terraform workspace new prod'
          sh 'terraform init'
          sh 'terraform apply --auto-approve'
        }
      }
    }
  }
}

def getTerraformPath() {
  def tfHome = tool name: 'terraform-server', type: 'terraform'
  return tfHome
}

def createS3bucket(bucketName) {
  sh "aws s3 mb ${bucketName} --region ap-south-1"
}

